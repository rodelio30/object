    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="bg-light">
    <div class="container-fluid">
<br>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
